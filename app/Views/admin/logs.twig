{% extends "master.twig" %}

{% block head %}

    <!-- Bootstrap -->
    <link href="css/bootstrap.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="css/font-awesome.min.css" rel="stylesheet">
    <!-- NProgress -->
    <link href="css/nprogress.css" rel="stylesheet">
    <!-- iCheck -->
    <link href="css/green.css" rel="stylesheet">

    <!-- Custom Theme Style -->
    <link href="css/custom.min.css" rel="stylesheet">
    <style>
        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

        .split {
            display: inline-block;
            /*width: 10%;*/
            margin: 0;
        }

        th {
            /*width: 15%;*/
            padding: 0;
        }

        p {
            font-weight: bold;
            font-size: large;
        }



    </style>

    <script src="js/bootstrap.js"></script>

{% endblock head %}

{% block title %} Gym Logs {% endblock title %}

{% block content %}

    <div class="clearfix"></div>

    <div class="row">
        {#<div class="col-md-12">#}
        <div class="x_panel2">
            <div class="x_title">
                <h1 style="width: auto; margin-right: 3%; color: lightcoral; font-weight: normal; margin-bottom: 0; display: inline-block;">
                    Gym Logs</h1>

                <form style="margin: 0; border-left: 1px solid #5F656A; display: inline-block;" role="search" method="get" class="search-form" action="/logs">
                    <label style="display: inline-block;">
                        <span class="screen-reader-text">Search for:</span>
                        <input style="margin: 0;" type="search" class="search-field" placeholder="Search â€¦" value="" name="keyword">
                    </label>
                    <input type="submit" class="search-submit" value="Search">
                </form>

                <div class="clearfix"></div>
            </div>
            <div>


                <!-- start project list -->
                <table class="table table-striped projects">
                    <thead>
                    <tr>

                        <th>ID #</th>
                        <th>Name</th>
                        <th>User ID</th>
                        <th>Login</th>
                        <th>Logout</th>
                        <th></th>
                        <th></th>

                    </tr>
                    </thead>
                    <tbody>



                    {% for log in logs %}

                        {#{% set currentUser = '' %}#}
                        {#{% for user in users %}#}
                            {#{% if user.id == log.userID %}#}
                                {#{% set currentUser = user %}#}
                            {#{% endif %}#}
                        {#{% endfor %}#}
                        <tr style="padding: 0;">

                            <td colspan="6" style="border: none; padding: 0;">

                                <div class="x_panel" style="padding: 0;">

                                    <div class="x_title" style="padding: 4px; border-bottom: none;">

                                        <div class="split" style="width: 5%; margin-right: 7.5%;">
                                            {{ loop.index }}
                                        </div>

                                        <div class="split" style="width: 15%; margin-right: 4%;">
                                            <p>
                                                {#{% for user in users %}#}
                                                    {#{% if user.id == log.userID %}#}
                                                    {{ log.name|capitalize }}
                                                {#{% endif %}#}
                                                {#{% endfor %}#}
                                            </p>

                                        </div>

                                        <div class="split" style="width: 16%; margin-right: 2%;">
                                            <p>{{ log.userID }}</p>
                                        </div>

                                        <div class="split" style="width: 16%; margin-right: 2%;">
                                            <p>{{ log.login }}</p>
                                        </div>

                                        <div class="split" style="width: 15%">
                                            <p>{{ log.logout }}</p>
                                        </div>

                                        <div class="split">
                                            <a href="/editusers?keyword={{ log.userID }}">
                                                <button>More Info</button>
                                            </a>
                                        </div>


                                        <ul class="nav navbar-right panel_toolbox">
                                            <li>
                                                <a class="collapse-link"><i class="fa fa-chevron-down"></i></a>
                                            </li>
                                        </ul>
                                        <div class="clearfix"></div>
                                    </div>

                                    <div class="x_content update" style="padding: 0; display: none;">

                                        <table class="table table-striped">
                                            <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Age</th>
                                                <th>Gender</th>
                                                <th>Membership Type</th>
                                                <th>Classification</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr>

                                                <td>
                                                    {{ log.name|capitalize }}
                                                </td>
                                                <td>{{ log.email }}</td>
                                                <td>{{ log.birthDate }}</td>
                                                <td>{{ log.gender|capitalize }}</td>
                                                <td>
                                                    <ul>
                                                        {% if log.membershipType == 1 %}
                                                            <li>Paid</li>
                                                        {% else %}
                                                            <li>Non-Paid</li>
                                                        {% endif %}
                                                    </ul>
                                                </td>
                                                <td>
                                                    <div>
                                                        {% if log.admin == 1 %}
                                                            <p style="padding: 0; font-size: medium;">{{ "Administrator" }}</p>
                                                        {% endif %}
                                                        {% if log.student == 1  %}
                                                            <p style="padding: 0; font-size: medium;">{{ "Student" }}</p>
                                                        {% endif %}
                                                        {% if log.faculty == 1  %}
                                                            <p style="padding: 0; font-size: medium;">{{ "Faculty" }}</p>
                                                        {% endif %}
                                                        {% if log.staff == 1  %}
                                                            <p style="padding: 0; font-size: medium;">{{ "Faculty" }}</p>
                                                        {% endif %}
                                                        {% if log.external == 1  %}
                                                            <p style="padding: 0; font-size: medium;">{{ "External Paying" }}</p>
                                                        {% endif %}
                                                    </div>
                                                </td>
                                                <td></td>
                                            </tr>

                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </td>


                    {% endfor %}




                    </tbody>
                </table>
                <!-- end project list -->

            </div>
        </div>
    </div>
    </div>



    <script>
        jQuery(document).ready(function() {

            jQuery('.collapse-link').click(function() {
                toggle(this);

            })  ;

        });

        function toggle($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
                    $ICON = jQuery($this).find('i'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

//            console.log($ICON);
            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');

                    $ICON.toggleClass('fa-chevron-down');
                    $ICON.addClass('fa-chevron-up');
                });
            } else {
                $BOX_CONTENT.slideToggle(200);
                $BOX_PANEL.css('height', 'auto');
                $ICON.toggleClass('fa-chevron-up');
                $ICON.addClass('fa-chevron-down');
            }

            jQuery('.x_title').css('border-bottom', '2px solid');

        }

        function toggleOnce($this) {

            var $BOX_PANEL = jQuery($this).closest('.x_panel'),
//                    $ICON = jQuery($this).parent().parent().parent().first().find('i'),
                    $ICON = jQuery($this).closest('.collapse-link'),
                    $BOX_CONTENT = $BOX_PANEL.find('.x_content');

            if ($BOX_PANEL.attr('style')) {
                $BOX_CONTENT.slideToggle(200, function(){
                    $BOX_PANEL.removeAttr('style');


                    console.log($ICON);
                    $ICON.toggleClass('fa-chevron-down');
                    console.log($ICON);
                    $ICON.addClass('fa-chevron-up');
                    console.log($ICON);
                });
            }

            $ICON.toggleClass('fa-chevron-down');
            $ICON.toggleClass('fa-chevron-up');

        }

        function toggleUpdate($this) {

            var $B = jQuery($this).closest('.x_content').closest('.x_content');
            console.log($B);

        }


    </script>



    <!-- jQuery -->
    {#<script src="js/jquery.min.js"></script>#}
    <!-- Bootstrap -->
    <script src="js/bootstrap.min.js"></script>
    <!-- FastClick -->
    <script src="js/fastclick.js"></script>
    <!-- NProgress -->
    <script src="js/nprogress.js"></script>
    <!-- bootstrap-progressbar -->
    <script>jQuery.noConflict();</script>
    <script src="js/bootstrap-progressbar.js"></script>

    <!-- Custom Theme Scripts -->
    <script>jQuery.noConflict();</script>
    <script src="js/custom.min.js"></script>

{% endblock content %}

